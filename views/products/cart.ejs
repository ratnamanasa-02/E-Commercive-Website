<% layout("/layouts/boilerplate") -%>
    <div class="deal_of_day">
        <h3> FLAT </h3> <h1>10%  INSTANT  DISCOUNT</h1><h3>ON  ICBI  BANK  CREDIT  AND  DEBIT  CARDS</h3>
   </div>
   
   <div class="cart-page">
    <div>
    <div class="my_bag">
        <h1>Shopping Cart</h1>
    </div>
   
   <% for(let item of cartItems){ %>
    <div class="cart-container">
    
        
        <div class="cart-item">
            <img src="<%= item.product.image %>" alt="Item 1" class="item-image">
            <div class="item-details">
                 <h3><%= item.product.title %>  <button onclick="openmodel()">Quantity</button><input type="text" class="qu_in" value="1"></h3> 
                <div id="openqcard">
                    <div id="q_content">
                        <h3>Select Quantity</h3>
                        <button class="qu_btn" onclick="upQu(-1)">-</button>
                        <input type="text" id="qu_in_style" class="qu_in" value="1">
                        <button class="qu_btn" onclick="upQu(1)">+</button>
                        <button onclick="closemodel()" id="save_btn">Save</button>
                    </div>
                </div>
                <p><%= item.product.description %></p>
                <h3>$<%= item.product.price %></h3>
            </div>
        </div>
        <a href="" method="delete" class="delete_bt" id="delete_button">Delete</a>
        <a href="" class="delete_bt" id="wish_button">Move to Wishlist</a>
    </div>
    <% } %>

</div>
    <div class="cart-buy">
        <div class="shipping_amt">
            <h4>Order Details</h4>
            <div>
                <button>PROCEED TO SHIPPING</button>
            </div>
    
        </div>
        <div class="coupon">
            <h3>Apply Coupon</h3>
            <input type="text" placeholder="Enter coupon code">
            <button>APPLY</button>
            <h4>Applicable Coupons</h4>
            <div class="cu_div">
                <input type="checkbox" >
                <div class="inner_dis">
                    <h3>SAVE 100</h3>
                    <h4>Savings: 100</h4>
                    <p>Get upto 15% Off on 2000 and Above.</p>
                    <p>Max Discount 500.</p>
                </div>
            </div>
            <div class="cu_div">
                <input type="checkbox" >
                <div class="inner_dis">
                    <h3>SAVE 500</h3>
                    <h4>Savings: 500</h4>
                    <p>Get upto 25% Off on 4000 and Above.</p>
                    <p>Max Discount 500.</p>
                </div>
            </div>
        </div>
    </div>
</div>




<script>
    function openmodel(){
        document.getElementById('openqcard').style.display='flex';
    }
    function closemodel(){
        document.getElementById('openqcard').style.display='none';
    }
    function upQu(change) {
        var quantityInput = document.querySelector('.qu_in');
        var currentQuantity = parseInt(quantityInput.value);
        quantityInput.value = Math.max(1, currentQuantity + change);
    }
</script>